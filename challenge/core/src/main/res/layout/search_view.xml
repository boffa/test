<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/rootView"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.835"
        android:id="@+id/search_left_guide"
        >
    </androidx.constraintlayout.widget.Guideline>
    <EditText
        android:layout_width="0dp"
        android:layout_height="46dp"
       app:layout_constraintEnd_toStartOf="@id/search_left_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_search_field"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/search"
        android:drawablePadding="16dp"
        android:paddingStart="16dp"
        android:id="@+id/search_editText"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/grey"
        android:textColorHint="@color/black"
        android:hint="@string/search"
        >
    </EditText>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/search_editText"
        app:layout_constraintBottom_toBottomOf="@id/search_editText"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/effacer"
        app:layout_constraintEnd_toEndOf="@id/search_editText"
        android:visibility="gone"
        android:id="@+id/clear_btn"
        >
    </androidx.appcompat.widget.AppCompatImageView>

</androidx.constraintlayout.widget.ConstraintLayout>