<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/pale_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_bottom_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.3"
        android:id="@+id/user_imageView"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/story_left_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/story_bottom_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27"
        />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/story_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/story_left_guide"
        app:layout_constraintBottom_toTopOf="@id/story_bottom_guide"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true"
        app:roundingBorderWidth="3dp"
        app:roundingBorderColor="@color/colorAccent"
        tools:srcCompat="@tools:sample/avatars"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="UserName"
        android:textSize="16sp"
        android:lines="1"
        app:layout_constraintStart_toEndOf="@id/story_imageView"
        app:layout_constraintBottom_toBottomOf="@id/story_imageView"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/small_description_top_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/long_description_top_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/small_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/small_description_top_guide"
        app:layout_constraintStart_toStartOf="@+id/story_left_guide"
        android:textSize="16sp"
        tools:text="small description"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/long_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/long_description_top_guide"
        app:layout_constraintStart_toStartOf="@+id/story_left_guide"
        android:textSize="16sp"
        tools:text="long description"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date_creation_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/story_left_guide"
        app:layout_constraintTop_toBottomOf="@+id/long_description_textView"
        android:textSize="16sp"
        tools:text="creation date"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date_edition_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/story_left_guide"
        app:layout_constraintTop_toBottomOf="@+id/date_creation_textView"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="edition date"
        />

</androidx.constraintlayout.widget.ConstraintLayout>